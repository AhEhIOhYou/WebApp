@using WebApp.Models
@{
    ViewBag.Title = "Edit Page";
    CashBox cb = ViewBag.CashBox;
}

<div>
    <h2>Cashbox</h2>
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>@cb.Id</td>
            <td>@cb.Name</td>
        </tr>
        </tbody>
    </table>
    <form method="post" action="/Home/EditCashBox/">
        <div class="form-group">
            <input name="Id" class="invisible" value="@cb.Id"/>
            <div class="input-group mb-3">
                <span class="input-group-text">Name</span>
                <input type="text" class="form-control" id="Name" name="Name" pattern="^[а-яА-Яa-zA-Z\s]{2,30}" value="@cb.Name">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Apply</button>
        <button type="reset" class="btn">Reset</button>
        <a href="/Home/" class="btn">Cancel</a>
    </form>
</div>