@using WebApp.Models
@{
    ViewBag.Title = "Edit Page";
    Contract c = ViewBag.Contract;
    List<Staff> lStaff = new List<Staff>(ViewBag.StaffList);
    List<OperationType> lOpType = new List<OperationType>(ViewBag.OperationType);
}

<div>
    <h2>Contract</h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Type</th>
                <th scope="col">User</th>
                <th scope="col">Date</th>
                <th scope="col">Sum</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@c.Id</td>
                <td>@c.NameType</td>
                <td>@c.NameUser</td>
                <td>@c.CDate</td>
                <td>@c.Sum</td>
            </tr>
        </tbody>
    </table>
    <form method="post" action="/Home/EditContract/">
        <div class="form-group">
            <input name="Id" class="invisible" value="@c.Id"/>
            <div class="input-group mb-3">
                <span class="input-group-text">New staff</span>
                <select class="form-control" name="IdUser">
                    @foreach (Staff s in lStaff)
                    {
                        <option value="@s.Id">@s.Name</option>
                    }
                </select>
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text">New type</span>
                <select class="form-control" name="IdType">
                    @foreach (OperationType ot in lOpType)
                    {
                        <option value="@ot.Id">@ot.Type</option>   
                    }
                </select>
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text">Date</span>
                <input type="datetime" class="form-control" name="CDate" value="@c.CDate">
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text">Sum</span>
                <input type="number" class="form-control" name="Sum" value="@c.Sum">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Apply</button>
        <button type="reset" class="btn">Reset</button>
        <a href="/Home/" class="btn">Cancel</a>
    </form>
</div>